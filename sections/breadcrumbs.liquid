<div class="page-width breadcrumbs-custom">
  {% render 'breadcrumbs-inner' %}
  {% if collection and template.name != 'collection' %}
    <a
      href="{% if collection.handle == 'frontpage' %}/{% else %}{{ collection.url }}{% endif %}"
      class="standard-font button-return"
    >
      {{ 'products.general.collection_return' | t: collection: collection.title }}
    </a>
  {% else %}
    <a href="{{ routes.root_url }}" class="standard-font button-return">
      {{ 'products.general.root_return' | t }}
    </a>
  {% endif %}
</div>
{% schema %}
{
  "name": "Breadcrumbs",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}
